{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist-electron",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "main.ts",
    "preload.ts",
    "database.ts",
    "queries.ts",
    "queries/**/*.sql"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}